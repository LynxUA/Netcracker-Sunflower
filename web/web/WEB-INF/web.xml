<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>HelloWorldServlet</servlet-name>
        <servlet-class>com.sunflower.web.HelloWorldServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckLoginServlet</servlet-name>
        <servlet-class>com.sunflower.web.CheckLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ResetPasswordServlet</servlet-name>
        <servlet-class>com.sunflower.web.ResetPasswordServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CompleteServlet</servlet-name>
        <servlet-class>com.sunflower.web.CompleteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignUpServlet</servlet-name>
        <servlet-class>com.sunflower.web.SignUpServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>WelcomeServlet</servlet-name>
        <servlet-class>com.sunflower.web.WelcomeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>XmlServlet</servlet-name>
        <servlet-class>com.sunflower.report.XmlServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RequestServlet</servlet-name>
        <servlet-class>com.sunflower.web.RequestServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LocationServlet</servlet-name>
        <servlet-class>com.sunflower.web.LocationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserInstanceServlet</servlet-name>
        <servlet-class>com.sunflower.web.UserInstanceServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ContactUsServlet</servlet-name>
        <servlet-class>com.sunflower.web.ContactUsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterEmployeeServlet</servlet-name>
        <servlet-class>com.sunflower.web.RegisterEmployeeServlet</servlet-class>
    </servlet>



    <servlet-mapping>
        <servlet-name>HelloWorldServlet</servlet-name>
        <url-pattern>/helloworld</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckLoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ResetPasswordServlet</servlet-name>
        <url-pattern>/reset</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CompleteServlet</servlet-name>
        <url-pattern>/complete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignUpServlet</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WelcomeServlet</servlet-name>
        <url-pattern>/welcome</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>XmlServlet</servlet-name>
        <url-pattern>/xmlxprt</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserInstanceServlet</servlet-name>
        <url-pattern>/user_si</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RequestServlet</servlet-name>
        <url-pattern>/request</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LocationServlet</servlet-name>
        <url-pattern>/location</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ContactUsServlet</servlet-name>
        <url-pattern>/contuctus</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterEmployeeServlet</servlet-name>
        <url-pattern>/reg_emp</url-pattern>
    </servlet-mapping>

    <ejb-local-ref>
        <ejb-ref-name>ejb/User</ejb-ref-name>
        <ejb-ref-type>Entity</ejb-ref-type>
        <local-home>com.sunflower.ejb.user.LocalUserHome</local-home>
        <local>com.sunflower.ejb.user.LocalUser</local>
        <ejb-link>UserEJB</ejb-link>
    </ejb-local-ref>

    <ejb-local-ref>
        <ejb-ref-name>ejb/Task</ejb-ref-name>
        <ejb-ref-type>Entity</ejb-ref-type>
        <local-home>com.sunflower.ejb.task.LocalTaskHome</local-home>
        <local>com.sunflower.ejb.task.LocalTask</local>
        <ejb-link>TaskEJB</ejb-link>
    </ejb-local-ref>

    <ejb-local-ref>
        <ejb-ref-name>ejb/ServiceOrder</ejb-ref-name>
        <ejb-ref-type>Entity</ejb-ref-type>
        <local-home>com.sunflower.ejb.ServiceOrder.LocalServiceOrderHome</local-home>
        <local>com.sunflower.ejb.ServiceOrder.LocalServiceOrder</local>
        <ejb-link>ServiceOrderEJB</ejb-link>
    </ejb-local-ref>
</web-app>